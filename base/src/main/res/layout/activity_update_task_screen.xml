<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


    <android.support.v4.widget.NestedScrollView
        android:background="#FFFFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/appBar"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/typeInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:hint="Task Name"

                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/task_name"
                    android:maxLength="50"
                    android:inputType="text"
                    style="@style/fp_editText" />
            </android.support.design.widget.TextInputLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fromInputLayout"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_large_margin"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginRight="@dimen/activity_large_margin"
                    android:hint="From"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/from_date"
                        android:maxLength="50"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        style="@style/fp_editText" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/toInputLayout"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_large_margin"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginRight="@dimen/activity_large_margin"
                    android:hint="To"

                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/to_date"
                        android:maxLength="50"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        style="@style/fp_editText" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!--   <android.support.design.widget.TextInputLayout
                   android:id="@+id/deadInputLayout"
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/activity_large_margin"
                   android:layout_marginTop="20.0dip"
                   android:layout_marginRight="@dimen/activity_large_margin"
                   android:hint="Dead Line"
                   >
                   <android.support.design.widget.TextInputEditText
                       android:id="@+id/dead_line"
                       android:maxLength="50"
                       android:focusableInTouchMode="false"
                       android:inputType="text"
                       style="@style/fp_editText" />
               </android.support.design.widget.TextInputLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="@dimen/activity_large_margin">


                <app.zingo.employeemanagements.Custom.MyEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/test_background"
                    android:layout_weight="1"
                    android:hint="Status"

                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textColorHint="#afaeae"
                    />

                <Spinner
                    android:id="@+id/task_status_update"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:entries="@array/task_status"
                    android:background="@drawable/spinner_background"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_large_margin"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginRight="@dimen/activity_large_margin"
                    android:text="Task Description"/>

                <EditText
                    android:id="@+id/task_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:hint="Describe About your Task"
                    android:padding="2dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:keepScreenOn="true"
                    android:layout_marginLeft="@dimen/activity_large_margin"
                    android:layout_marginRight="@dimen/activity_large_margin"
                    android:lines="5"
                    android:background="@drawable/spinner_background"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_large_margin"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginRight="@dimen/activity_large_margin"
                    android:text="Task Comments"/>

                <EditText
                    android:id="@+id/task_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:keepScreenOn="true"
                    android:hint="Comments/Remarks"
                    android:padding="2dp"
                    android:layout_marginLeft="@dimen/activity_large_margin"
                    android:layout_marginRight="@dimen/activity_large_margin"
                    android:lines="5"
                    android:background="@drawable/spinner_background"
                    />


            </LinearLayout>



            <Switch
                android:id="@+id/show_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"

                android:text="Mark on map"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:textOff="No"
                android:textOn="Yes"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map_layout"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/location_et"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:hint="Location"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"/>

                <LinearLayout
                    android:id="@+id/lan_lat"
                    android:layout_below="@+id/location_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                    <EditText
                        android:id="@+id/lat_et"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:hint="Latitude"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:background="#ffffff"/>
                    <EditText
                        android:id="@+id/lng_et"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:hint="Longitude"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>

                </LinearLayout>


                <app.zingo.employeemanagements.Custom.MapViewScroll
                    android:id="@+id/task_location_map"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@+id/lan_lat"
                    android:layout_margin="10dp"
                    />


            </RelativeLayout>


            <android.support.v7.widget.AppCompatButton
                android:textSize="@dimen/regularFont"
                android:textColor="@color/white"
                android:id="@+id/apply_leave"
                android:background="@drawable/selector_button_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginTop="20.0dip"
                android:layout_marginBottom="20.0dip"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:text="Update Task"
                android:textAllCaps="false"

                />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>