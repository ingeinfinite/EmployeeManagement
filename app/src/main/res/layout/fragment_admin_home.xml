<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal"
            android:id="@+id/updateText"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New version available! Click to update now!"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/renewWarning"
            android:focusable="true"
            android:visibility="visible"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/expAlertMessage"
                android:background="@color/grey"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/renew_alert_message"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="3">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/attendance"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/attendance_menu"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/live_tracking"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/track"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live Tracking"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/task_layout"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/organize"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task"/>
            </LinearLayout>








        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="3">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/expenses_mgmt"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/expenses"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expenses"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/leaveApplications"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/leave_menu"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:id="@+id/leaveBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leaves"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/salary"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/salary"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salary"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="3">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/team"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/team_list"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Team"/>
            </LinearLayout>




            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/report_mgmt"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/report_mgmt"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reports"/>
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/department_org"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/maintenance"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"/>
            </LinearLayout>






        </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="3">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/employees"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/employee_menu"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employees"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/customer_creation"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rating_client"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer/Client"/>
            </LinearLayout>





            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/change_password"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/change_password"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"/>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="3">



            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/holiday"
                android:padding="8dp"

                android:clickable="true"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/event_day"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day Management"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/department"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/factory"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organization"/>
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/logout"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logout"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/plan_detail"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_featured_play_list_black_24dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan Features"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>
